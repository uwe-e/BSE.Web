@model IEnumerable<BSE.Identity.Web.Models.EditUserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<ul class="nav navbar-nav">
    <li>@Html.ActionLink("Create New User", "Register")</li>
    <li>@Html.ActionLink("Create New Role", "CreateRole")</li>
      
</ul>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new
           {
               id = Url.Encode(item.Id)
           }) |
@Html.ActionLink("Password", "ManagePassword", new
       {
           id = item.Id
       }) |
@Html.ActionLink("Roles", "UserRoles", new
       {
           id = item.Id
       }) |
@Html.ActionLink("Delete", "Delete", new
       {
           id = item.Id
       })
            </td>
        </tr>
    }

</table>
